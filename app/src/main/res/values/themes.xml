<resources>

  <style name="Theme.Sefer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/onPrimary</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/white</item>

    <item name="android:windowBackground">@color/windows</item>
    <item name="android:textColorLink">@color/link</item>
    <item name="android:textColorPrimary">@color/text_primary</item>

    <!-- Ternary   -->
    <item name="colorTertiary">#85CFFF</item>
    <item name="colorOnTertiary">#00344C</item>
    <item name="colorTertiaryContainer">#004C6C</item>
    <item name="colorOnTertiaryContainer">#C7E7FF</item>

    <item name="android:statusBarColor">?colorSurface</item>
    <item name="android:navigationBarColor">?colorSurface</item>
    <item name="colorControlNormal">?android:textColorPrimary</item>

    <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    <item name="snackbarStyle">@style/snackBar</item>
  </style>

</resources>