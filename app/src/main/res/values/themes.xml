<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.Sefer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!--  Primary  -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorOnPrimary">@color/onPrimary</item>

    <!-- Secondary -->
    <item name="colorSecondary">@color/secondary</item>
    <item name="colorSecondaryVariant">@color/teal_200</item>
    <item name="colorOnSecondary">@color/onSecondary</item>

    <!-- Ternary   -->
    <item name="colorTertiary">#85CFFF</item>
    <item name="colorOnTertiary">#00344C</item>
    <item name="colorTertiaryContainer">#004C6C</item>
    <item name="colorOnTertiaryContainer">#C7E7FF</item>

    <!--    Surface -->
    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/txtColorOnSurface</item>
    <item name="colorOnSurfaceVariant">#C4C6CF</item>
    <item name="colorSurfaceVariant">#43474E</item>

    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:windowBackground">@color/windows</item>
    <item name="android:textColorLink">@color/link</item>

    <item name="android:statusBarColor">?colorSurface</item>
    <item name="android:navigationBarColor">?colorSurface</item>
    <item name="colorControlNormal">?android:textColorPrimary</item>

    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
  </style>

</resources>